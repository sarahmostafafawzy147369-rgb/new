<Window x:Class="WpfApp16.Stockwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp16"
        mc:Ignorable="d"
        Title="Stockwindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False"
            IsReadOnly="True"
            x:Name="data_grid1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SupplierName"  Binding="{Binding Supplier.Name }"  Width="200" FontSize="17" />
                <DataGridTextColumn Header="ProductName"  Binding="{Binding  Name}"  Width="200" FontSize="17" />
                <DataGridTextColumn Header="Price"  Binding="{Binding Price }"  Width="200" FontSize="17" />
                <DataGridTextColumn Header="Quantity"  Binding="{Binding Quantity}"  Width="200" FontSize="17" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal">
                <Label 
                    Content="Productname"
                    FontSize="18"
                    Height="40"
                    FontWeight="Bold"
                    FontStyle="Italic"
                    Width="130"/>
                <TextBox
                    x:Name="txt_name"
                   BorderBrush="Black"
                    BorderThickness="2"
                    Width="130"
                    Height="40"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal">
                <Label 
                    Content="ProductQintity"
                    FontSize="18"
                    Height="40"
                    FontWeight="Bold"
                    FontStyle="Italic"
                    Width="140"/>
                <TextBox
                    x:Name="txt_quantity"
                   BorderBrush="Black"
                    BorderThickness="2"
                    Width="110"
                    Height="40"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <Button 
                Grid.Column="2"
                Width="120"
                Height="40"
                Content="Save"
                FontSize="20"
                FontStyle="Italic" Background="#FF2F8E21" Click="Button_Click" />
        </Grid>
        <Grid Grid.Row="2">
            <DataGrid x:Name="datagrid2" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="SupplierName" Binding="{Binding Supplier.Name}" Width="200"/>
                    <DataGridTextColumn Header="ProductName" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="price" Binding="{Binding Price}" Width="200" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                    <DataGridTemplateColumn/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>

</Window>
