<Window x:Class="WpfApp16.AddSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp16"
        mc:Ignorable="d"
        Title="AddSupplier" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Add Supplier" 
                   FontSize="26"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel>
                <Label Content="Add Supplier ID"/>
                <TextBox x:Name="txt_ID" 
                    Width="200" Height="40"/>
                <Label Content="Add Supplier Name"/>
                <TextBox x:Name="txt_name"
                    Width="200" Height="40"/>
                <Label Content="Add Supplier Gmail"/>
                <TextBox x:Name="txt_gmail"
                    Width="200" Height="40"/>
                <Label Content="Add Supplier Phone"/>
                <TextBox x:Name="txt_Phone"
                    Width="200" Height="40"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Button Content=" Add Supplier"
                    Width="300" Height="40"
                    FontSize="30"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" Background="#FF4DBF6E" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
