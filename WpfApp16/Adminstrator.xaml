<Window x:Class="WpfApp16.Adminstrator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp16"
        mc:Ignorable="d"
        Title="Adminstrator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Label Grid.Row="0" Grid.Column="0"
                   Content="Product Name"
                   FontSize="25"
                       Width="200"
                    FontStyle="Italic"
                 FontWeight="Bold"/>
                <TextBox 
                    x:Name="txt_name"
                    Width="200"
                    Height="40"
                    BorderBrush="Black"
                    BorderThickness="2"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                <Label 
                   Content="Product Price"
                   FontSize="25"
                       Width="200"
                    FontStyle="Italic"
                 FontWeight="Bold"/>
                <TextBox 
                    x:Name="txt_price"
                    Width="200"
                    Height="40"
                    BorderBrush="Black"
                    BorderThickness="2"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                <Label 
                   Content="Product Supplier"
                   FontSize="25"
                       Width="210"
                    FontStyle="Italic"
                 FontWeight="Bold"/>
                <TextBox 
                   x:Name="txt_supplier"
                    Width="190"
                    Height="40"
                    BorderBrush="Black"
                    BorderThickness="2"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <Label 
                   Content="Product Quantity"
                   FontSize="25"
                       Width="210"
                    FontStyle="Italic"
                 FontWeight="Bold"/>
                <TextBox 
                     x:Name="txt_quantity"
                    Width="190"
                    Height="40"
                    BorderBrush="Black"
                    BorderThickness="2"/>
            </StackPanel>
            <Button  
                Grid.Column="0"
                Grid.Row="2"
                Width="150"
                HorizontalAlignment="Left"
                Content="Add Product"
                Height="40"
                FontSize="20"
                FontWeight="Bold"
                FontStyle="Italic"
                Background="Green" Click="Button_Click" />
            <Button  
                Grid.Column="0"
                Grid.Row="2"
                Width="150"
                HorizontalAlignment="Right"
                Margin="-10,0,0,0"
                Content=" Update Product"
                Height="40"
                FontSize="20"
                FontWeight="Bold"
                FontStyle="Italic"
                Background="#FF4A574A" RenderTransformOrigin="0.258,0.631" Click="Button_Click_1" />
            <Button  
                Grid.Column="1"
                Grid.Row="2"
                Width="150"
                HorizontalAlignment="Left"
                Margin="79,14,0,13"
                Content=" Delete Product"
                Height="40"                   
                FontSize="20"
                FontWeight="Bold"
                FontStyle="Italic"
                Background="#FFBD1A09" RenderTransformOrigin="0.258,0.631" Click="Button_Click_2" />
            <Button  
                Grid.Column="1"
                Grid.Row="2"
                Width="150"
                HorizontalAlignment="Left"
                Margin="240,14,0,13"
                Content=" Add Supplier"
                Height="40"                   
                FontSize="20"
                FontWeight="Bold"
                FontStyle="Italic"
                Background="#FFBDA609" RenderTransformOrigin="0.258,0.631" Click="Button_Click_3"  />
        </Grid>
        <Grid Grid.Row="1">
            <DataGrid
                 x:Name="datagridd"
                AutoGenerateColumns="False"
                IsReadOnly="True" SelectionChanged="datagridd_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header=" Supplier Name" Binding="{Binding Supplier.Name}" Width="200" />
                    <DataGridTextColumn Header=" Product Name" Binding="{Binding Name}" Width="200" />
                    <DataGridTextColumn Header=" Product Price" Binding="{Binding Price}" Width="200" />
                    <DataGridTextColumn Header=" Product Quantity" Binding="{Binding Quantity}" Width="200" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
